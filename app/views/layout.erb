<!doctype html>
<html class="no-js" lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Slow Food Sinatra</title>
  <link href='https://fonts.googleapis.com/css?family=Quicksand' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" type="text/css" href="foundation-icons/foundation-icons.css">
  <link rel="stylesheet" href="css/foundation.css"/>
  <link rel="stylesheet" type="text/css" href="css/style.css">
</head>
<body>


<% if order %>
  <div class="checkout">
    <div class="row">
      <div class="large-12 columns">
        You have ordered <%= order.order_items.count %> dishes.
        <a href="/#" style="color: white; font-weight: bold;"  data-open="checkout-modal">Checkout</a>
      </div>
    </div>
  </div>
<% end %>

<% flash.keys.each do |type| %>
  <div class="flash">
    <div class="row">
      <div class="large-12 columns">
        <%= flash[type] %>
      </div>
    </div>
  </div>
<% end %>

<div class="intro">
  <div class="row">
    <div class="large-12 columns">
      <div style="background-color:rgba(0,0,0,0.7); min-height:100%; width:100%;">
        <div class="display-table" style="height:600px; width:100%;">
          <div class="va-align">
            <div>
              <a href="/">MENU</a>
            </div>

            <% if current_user %>
              <h2>
                Welcome to SlowFood <%= current_user.name %></h2><br><br>
              <a href="/logout" class="secondary hollow button">Logout</a>


            <% else %>
              <br>
              <h2>Welcome to Slow Food</h2><br><br>
              <button class="secondary hollow button" data-open="register-modal">Register</button>
              <button class="secondary hollow button" data-open="login-modal">Login</button>
            <% end %>


          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="about">
  <div class="row">
    <div class="large-12 columns">
      <%= yield %>
    </div>
  </div>
</div>


<div class="contact">
  <div style="background-color:rgba(0,0,0,0.7); min-height:100%; padding:32px; width:100%;">
    <div class="row">
      <div class="large-12 columns">
        <div class="display-table" style=" width:100%;">
          <div class="va-align">
            <h4>slowfood@slowfood.com </h4>
            Holtermansgatan 1D, 411 29 Gothenburg
            <br> 031-123456
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="footer">
  <div class="row">
    <div class="large-12 columns">
      <div class="footer-social">
        <i class="fi fi-social-facebook"></i>
        <i class="fi fi-social-twitter"></i>
        <i class="fi fi-social-instagram"></i>
        <i class="fi fi-social-linkedin"></i>
      </div>
      Built with <i class="fi fi-heart"></i> at Craft Academy 2017.
      <p>Powered by <span class="orange">OpenSourced Software</span></p>
    </div>
  </div>
</div>
<script src="js/jquery.js"></script>
<script src="js/foundation.js"></script>
<script>
    $(document).ready(function () {
        $(document).foundation();
    })
</script>

<% unless current_user %>

  <div class="reveal small-4" id="login-modal" data-reveal>
    <%= erb :signin %>
    <button class="close-button" data-close aria-label="Close modal" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <div class="reveal small-4" id="register-modal" data-reveal>
    <%= erb :signup %>
    <button class="close-button" data-close aria-label="Close modal" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

<% end %>

<% if order %>
  <div class="reveal small-4" id="checkout-modal" data-reveal>
    <%= erb :checkout, layout: false %>
    <button class="close-button" data-close aria-label="Close modal" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>


</body>
</html>
